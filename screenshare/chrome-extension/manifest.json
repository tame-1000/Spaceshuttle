{
  "name": "Your extension name here",
  "short_name": "Your extension short_name here",
  "version": "1",
  "manifest_version": 2,
  "description": "Your extension description here",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "desktopCapture",
    "tabs"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [{
    "matches": ["http://localhost:9000/*"],
    "js": ["content.js"],
    "all_frames": true,
    "run_at": "document_end"
  }]
}
